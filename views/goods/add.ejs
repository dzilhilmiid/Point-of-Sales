<h2>Tambah Goods</h2>

<div class="form-card">
  <form method="POST" action="/goods/add" enctype="multipart/form-data">

    <div class="form-group">
      <label>Barcode</label>
      <input type="text" name="barcode">
    </div>

    <div class="form-group">
      <label>Nama Barang</label>
      <input type="text" name="name" required>
    </div>

    <div class="form-group">
      <label>Stock</label>
      <input type="number" name="stock" value="0">
    </div>

    <div class="form-group">
      <label>Purchase Price</label>
      <input type="number" name="purchase_price" value="0">
    </div>

    <div class="form-group">
      <label>Selling Price</label>
      <input type="number" name="selling_price" value="0">
    </div>

    <!-- UNIT -->
    <div class="form-group">
      <label>Unit</label>
      <select name="unit_id" required>
        <option value="">-- pilih unit --</option>
        <% units.forEach(u => { %>
          <option value="<%= u.id %>"><%= u.nama_unit %></option>
        <% }) %>
      </select>
    </div>
    
    <!-- PHOTO -->
    <div class="form-group">
      <label>Photo</label>
      <input type="file" name="photo" accept="image/*">
    </div>

    <div class="form-actions">
      <a href="/goods" class="btn-cancel">Cancel</a>
      <button type="submit" class="btn-primary">Save Goods</button>
    </div>

  </form>
</div>