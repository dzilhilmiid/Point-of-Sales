<h2>Tambah Unit</h2>

<div class="form-card">
  <form method="POST" action="/units/add">

    <div class="form-group">
      <label>Nama Unit</label>
      <input type="text" name="nama_unit" required>
    </div>

    <div class="form-group">
      <label>Note</label>
      <textarea name="note"></textarea>
    </div>

    <div class="form-actions">
      <a href="/units" class="btn-cancel">Cancel</a>
      <button type="submit" class="btn-primary">Save Unit</button>
    </div>
    
  </form>
</div>