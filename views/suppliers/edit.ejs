<h2>Edit Supplier</h2>

<div class="form-card">
    <form action="/suppliers/<%= supplier.supplier_id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Nama Supplier</label>
            <input type="text" name="name" value="<%= supplier.name %>" class="form-control mb-2">
        </div>
        <div class="form-group">
            <label>Alamat</label>
            <textarea name="address" class="form-control mb-2"><%= supplier.address %></textarea>
        </div>
        <div class="form-group">
            <label>Contact</label>
            <input type="text" name="phone" value="<%= supplier.phone %>" class="form-control mb-2">
        </div>
        <div class="form-actions">
            <button class="btn-primary">Update</button>
            <a href="/suppliers" class="btn-cancel">Back</a>
        </div>
</form>

</div>
