<h2>Edit Member</h2>

<div class="form-card">
  <form method="POST" action="/members/edit/<%= member.id %>">

    <div class="form-group">
      <label>Nama</label>
      <input type="text" name="nama" value="<%= member.nama %>" required>
    </div>

    <div class="form-group">
      <label>Email</label>
      <input type="email" name="email" value="<%= member.email %>" required>
    </div>

    <div class="form-group">
      <label>Password (kosongkan jika tidak diubah)</label>
      <input type="password" name="password" placeholder="Isi hanya jika ingin mengganti password">
    </div>

    <div class="form-group">
      <label>Role</label>
      <select name="role">
        <option value="staff" <%= member.role=='staff'?'selected':'' %>>Staff</option>
        <option value="kasir" <%= member.role=='kasir'?'selected':'' %>>Kasir</option>
        <option value="admin" <%= member.role=='admin'?'selected':'' %>>Admin</option>
        <option value="manager" <%= member.role=='manager'?'selected':'' %>>Manager</option>
        <option value="owner" <%= member.role=='owner'?'selected':'' %>>Owner</option>
      </select>
    </div>

    <div class="form-actions">
      <a href="/members" class="btn-cancel">Cancel</a>
      <button type="submit" class="btn-primary">Update Member</button>
    </div>
  
  </form>
</div>